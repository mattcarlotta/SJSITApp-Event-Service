{
  "name": "sjsitapp-event-service",
  "version": "1.0.0",
  "main": "app.js",
  "description": "An application for the San Jose Sharks Ice Team.",
  "repository": "https://github.com/mattcarlotta/SJSITApp-Event-Service",
  "author": "Matt Carlotta",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=8",
    "npm": ">=3"
  },
  "scripts": {
    "dev": "better-npm-run dev",
    "db:drop": "better-npm-run db:drop",
    "db:seed": "better-npm-run db:seed",
    "pre-commit": "npm run lint --silent && npm run test",
    "start": "better-npm-run start",
    "lint": "lint-staged",
    "test": "DATABASE=sjsitapp-test-db NODE_ENV=testing DROPDB=true jest --config ./jest.json --passWithNoTests",
    "test:cov": "better-npm-run test:cov",
    "test:watch": "better-npm-run test:watch"
  },
  "betterScripts": {
    "db:drop": {
      "command": "node ./utils/globalTeardown.js",
      "env": {
        "DATABASE": "sjsitapp-test-db",
        "NODE_ENV": "development",
        "DROPDB": "true"
      }
    },
    "db:seed": {
      "command": "node ./utils/globalSetup.js",
      "env": {
        "DATABASE": "sjsitapp-test-db",
        "NODE_ENV": "development",
        "SEED": "true"
      }
    },
    "dev": {
      "command": "nodemon ./app.js",
      "env": {
        "CLIENT": "http://localhost:3000",
        "DATABASE": "sjsitapp-dev-db",
        "NODE_ENV": "development"
      }
    },
    "start": {
      "command": "node app.js",
      "env": {
        "CLIENT": "http://example.com",
        "DATABASE": "sjsitapp-prod-db",
        "NODE_ENV": "production"
      }
    },
    "test": {
      "command": "jest --config ./jest.json --passWithNoTests",
      "env": {
        "DATABASE": "sjsitapp-test-db",
        "NODE_ENV": "testing",
        "DROPDB": "true"
      }
    },
    "test:cov": {
      "command": "jest --config ./jest.json --coverage",
      "env": {
        "CLIENT": "http://localhost:5001",
        "DATABASE": "sjsitapp-test-db",
        "NODE_ENV": "testing",
        "DROPDB": "true"
      }
    },
    "test:watch": {
      "command": "jest --config ./jest.json --passWithNoTests --watchAll",
      "env": {
        "CLIENT": "http://localhost:5001",
        "DATABASE": "sjsitapp-test-db",
        "NODE_ENV": "testing"
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "dependencies": {
    "@babel/core": "^7.6.3",
    "@babel/preset-env": "^7.6.3",
    "@babel/register": "^7.6.0",
    "axios": "^0.19.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "better-npm-run": "^0.1.1",
    "chalk": "^2.4.2",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "mongoose": "^5.7.1",
    "node-schedule": "^1.3.2",
    "nodemon": "^1.19.2"
  },
  "devDependencies": {
    "axios-mock-adapter": "^1.17.0",
    "babel-jest": "^24.9.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-import-resolver-babel-module": "^5.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2"
  }
}
